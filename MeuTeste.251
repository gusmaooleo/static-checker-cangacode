functions
func integer:             factorial(paramType integer: n) {
    // se n <= 1, retorna 1
    if (n <= 1) {
        return 1
    } else {
        // recursao: n * factorial(n-1)
        return n *                  factorial(paramType integer: (n - 1))
    } endIf
}             endFunction;

func void: main(paramType ?) {
    n := 5;
    result := factorial(paramType integer: n); // atribuição para result
    
    // exemplo de uso de print
